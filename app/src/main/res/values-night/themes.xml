<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NoodoeTest" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">?attr/listBackground</item>
        <item name="colorPrimaryVariant">?attr/listBackground</item>
        <item name="colorOnPrimary">?attr/listBackground</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">?attr/listBackground</item>
        <item name="colorSecondaryVariant">?attr/listBackground</item>
        <item name="colorOnSecondary">?attr/listBackground</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorText">@color/white</item>
        <item name="listBackground">@color/black</item>
    </style>
</resources>